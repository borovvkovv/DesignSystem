{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["declaration.d.ts", "env.d.ts", "tailwind.config.*", "./src/**/*", "./src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  }
}
